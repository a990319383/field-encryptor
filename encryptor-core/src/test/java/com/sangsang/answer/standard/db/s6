SELECT role_id, user_name, update_time, create_time, id, login_pwd, login_name, CAST(AES_DECRYPT(FROM_BASE64(phone), '7uq?q8g3@q') AS CHAR) AS phone FROM tb_user tu WHERE tu.phone = TO_BASE64(AES_ENCRYPT(?, '7uq?q8g3@q')) UNION ALL SELECT role_id, user_name, update_time, create_time, id, login_pwd, login_name, CAST(AES_DECRYPT(FROM_BASE64(phone), '7uq?q8g3@q') AS CHAR) AS phone FROM tb_user tu2 WHERE tu2.phone = TO_BASE64(AES_ENCRYPT(?, '7uq?q8g3@q')) UNION SELECT role_id, user_name, update_time, create_time, id, login_pwd, login_name, CAST(AES_DECRYPT(FROM_BASE64(phone), '7uq?q8g3@q') AS CHAR) AS phone FROM tb_user tu3 WHERE tu3.phone = TO_BASE64(AES_ENCRYPT(?, '7uq?q8g3@q'))