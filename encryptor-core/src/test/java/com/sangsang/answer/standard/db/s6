SELECT tu.user_name, tu.id, tu.update_time, tu.role_id, tu.login_name, tu.create_time, CAST(AES_DECRYPT(FROM_BASE64(tu.phone), '7uq?q8g3@q') AS CHAR) AS phone, tu.login_pwd FROM tb_user tu WHERE tu.phone = TO_BASE64(AES_ENCRYPT(?, '7uq?q8g3@q')) UNION ALL SELECT tu2.user_name, tu2.id, tu2.update_time, tu2.role_id, tu2.login_name, tu2.create_time, CAST(AES_DECRYPT(FROM_BASE64(tu2.phone), '7uq?q8g3@q') AS CHAR) AS phone, tu2.login_pwd FROM tb_user tu2 WHERE tu2.phone = TO_BASE64(AES_ENCRYPT(?, '7uq?q8g3@q')) UNION SELECT tu3.user_name, tu3.id, tu3.update_time, tu3.role_id, tu3.login_name, tu3.create_time, CAST(AES_DECRYPT(FROM_BASE64(tu3.phone), '7uq?q8g3@q') AS CHAR) AS phone, tu3.login_pwd FROM tb_user tu3 WHERE tu3.phone = TO_BASE64(AES_ENCRYPT(?, '7uq?q8g3@q'))