SELECT tb.user_name, tb.id, tb.update_time, tb.role_id, tb.login_name, tb.create_time, CAST(AES_DECRYPT(FROM_BASE64(tb.phone), '7uq?q8g3@q') AS CHAR) AS phone, tb.login_pwd, tr.update_time, tr.create_time, tr.id, tr.role_desc, CAST(AES_DECRYPT(FROM_BASE64(tr.role_name), '测试秘钥') AS CHAR) AS role_name FROM tb_user tb LEFT JOIN tb_role tr ON tb.phone = TO_BASE64(AES_ENCRYPT(CAST(AES_DECRYPT(FROM_BASE64(tr.role_name), '测试秘钥') AS CHAR), '7uq?q8g3@q')) WHERE tb.phone = TO_BASE64(AES_ENCRYPT(?, '7uq?q8g3@q'))