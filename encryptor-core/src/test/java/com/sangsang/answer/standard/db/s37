SELECT tu.user_name, tu.id, tu.update_time, tu.role_id, tu.login_name, tu.create_time, CAST(AES_DECRYPT(FROM_BASE64(tu.phone), '7uq?q8g3@q') AS CHAR) AS phone, tu.login_pwd FROM tb_user tu WHERE (tu.user_name, tu.phone, tu.phone) IN (SELECT CAST(AES_DECRYPT(FROM_BASE64(tr.role_name), '测试秘钥') AS CHAR) AS role_name, TO_BASE64(AES_ENCRYPT(tr.role_desc, '7uq?q8g3@q')) AS role_desc, TO_BASE64(AES_ENCRYPT(CAST(AES_DECRYPT(FROM_BASE64(tr.role_name), '测试秘钥') AS CHAR), '7uq?q8g3@q')) AS role_name FROM tb_role tr)